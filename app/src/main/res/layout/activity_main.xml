<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_container">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container_main"
        android:orientation="vertical"
        android:layout_marginBottom="-16px"
        android:layout_above="@+id/tabs"
        android:layout_alignParentTop="true">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/tabs"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_tabs"
        android:baselineAligned="false" >

        <LinearLayout
            android:id="@+id/task_tab"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="14dp" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/task_icon"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:id="@+id/task_tab_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:id="@+id/task_tab_label" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/device_tab"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="14dp" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/device_icon"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:id="@+id/device_tab_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:id="@+id/device_tab_label" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/msg_tab"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_voice"
                android:background="#00eeeeee"
                android:id="@+id/btn_voice" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/me_tab"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="14dp" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/me_icon"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:id="@+id/me_tab_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:id="@+id/me_tab_label" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_tab"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="14dp" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/setting_icon"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:id="@+id/setting_tab_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:id="@+id/setting_tab_label" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>