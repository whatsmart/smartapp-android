<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">18sp</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="preferenceTheme">@style/AppTheme.SettingPreference</item>
    </style>

    <color name="fragment_background">#f5f5f5</color>

    <style name="AppTheme.SettingPreference.Preference">
        <item name="layout">@layout/setting_preference</item>
    </style>

    <style name="AppTheme.SettingPreference.Preference.Screen">
    </style>

    <style name="AppTheme.SettingPreference.Preference.Information">
        <item name="layout">@layout/setting_preference_information</item>
        <item name="enabled">false</item>
        <item name="shouldDisableView">false</item>
    </style>

    <style name="AppTheme.SettingPreference.Preference.Category">
        <item name="layout">@layout/setting_preference_category</item>
        <!-- The title should not dim if the category is disabled, instead only the preference children should dim. -->
        <item name="shouldDisableView">false</item>
        <item name="selectable">false</item>
    </style>

    <style name="AppTheme.SettingPreference.Preference.Checkbox">
        <item name="widgetLayout">@layout/setting_preference_checkbox</item>
    </style>

    <style name="AppTheme.SettingPreference.Preference.Dialog">
        <item name="positiveButtonText">@android:string/ok</item>
        <item name="negativeButtonText">@android:string/cancel</item>
    </style>
    <style name="AppTheme.SettingPreference.Preference.Dialog.EditText">
        <item name="dialogLayout">@layout/preference_dialog_edittext</item>
    </style>

    <style name="AppTheme.SettingPreference" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceStyle">@style/AppTheme.SettingPreference.Preference</item>
        <item name="preferenceScreenStyle">@style/AppTheme.SettingPreference.Preference.Screen</item>
        <item name="preferenceInformationStyle">@style/AppTheme.SettingPreference.Preference.Information</item>
        <item name="preferenceCategoryStyle">@style/AppTheme.SettingPreference.Preference.Category</item>
        <item name="checkBoxPreferenceStyle">@style/AppTheme.SettingPreference.Preference.Checkbox</item>
        <item name="editTextPreferenceStyle">@style/AppTheme.SettingPreference.Preference.Dialog.EditText</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">#ff007fff</item>
        <item name="contentInsetStart">10dp</item>
    </style>

    <style name="Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
</resources>